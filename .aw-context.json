{
  "patterns": {
    "actor-system": {
      "filePatterns": ["**/actors/**", "**/core/actors/**"],
      "displayName": "Actor System",
      "priority": 1
    },
    "event-emission": {
      "filePatterns": ["**/actor-event-bus.*", "**/create-actor-ref.*"],
      "displayName": "Event Emission",
      "priority": 2
    },
    "supervision": {
      "filePatterns": ["**/enhanced-supervisor.*", "**/supervisor.*"],
      "displayName": "Supervision",
      "priority": 3
    },
    "hierarchy": {
      "filePatterns": ["**/hierarchical-actor.*", "**/hierarchy/**"],
      "displayName": "Hierarchy Management",
      "priority": 4
    },
    "core-framework": {
      "filePatterns": ["**/core/**", "!**/actors/**", "!**/test*"],
      "displayName": "Core Framework",
      "priority": 5
    },
    "tests": {
      "filePatterns": ["**/*.test.*", "**/test/**"],
      "displayName": "Tests",
      "priority": 6
    },
    "cli-tools": {
      "filePatterns": ["**/agent-workflow-cli/**", "**/commands/**"],
      "displayName": "CLI Tools",
      "priority": 7
    },
    "documentation": {
      "filePatterns": ["**/docs/**", "**/*.md", "**/GUIDE*"],
      "displayName": "Documentation",
      "priority": 8
    }
  },
  "analysis": {
    "maxModules": 4,
    "separator": " | ",
    "fallbackMessage": "files across project modules"
  }
}
