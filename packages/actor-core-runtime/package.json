{
  "name": "@actor-core/runtime",
  "version": "0.1.0",
  "description": "Core actor model runtime for universal actor-based applications",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm && tsc --emitDeclarationOnly",
    "build:watch": "pnpm build --watch",
    "dev": "vitest --watch",
    "test": "vitest run",
    "test:unit": "vitest run src/unit",
    "test:integration": "vitest run src/integration --exclude '**/distributed-actor-directory.test.ts'",
    "test:all": "vitest run",
    "test:debug": "DEBUG_TESTS=true vitest run",
    "lint": "biome check .",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "keywords": [
    "actor-model",
    "state-machine",
    "message-passing",
    "reactive",
    "runtime"
  ],
  "author": "Actor-Core Team",
  "license": "MIT",
  "dependencies": {
    "uuid": "^11.1.0",
    "xstate": "^5.8.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
